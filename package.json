{
  "name": "angular-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate Angular CRUD Application",
  "keywords": [
    "angular",
    "angular2",
    "webpack",
    "typescript",
    "mocha",
    "protractor"
  ],
  "author": "Norbert Annus <annus.norbert@gmail.com>",
  "homepage": "https://github.com/SuNR0N/angular-boilerplate",
  "license": "MIT",
  "scripts": {
    "build:dev": "npm run clean:dist && webpack --config config/webpack.dev.js --progress --profile",
    "build:docker": "npm run build:prod:aot && docker build -t angular-boilerplate:latest .",
    "build:prod": "npm run clean:dist && webpack --config config/webpack.prod.js --progress --profile --bail",
    "build:prod:aot": "npm run clean:dist && npm run clean:aot && webpack --config config/webpack.prod.js --progress --profile --bail",
    "build": "npm run build:dev",
    "clean:aot": "rimraf -- aot",
    "clean:coverage": "rimraf -- coverage",
    "clean:dist": "rimraf -- dist",
    "clean": "npm cache clean && npm run rimraf -- aot coverage dist node_modules",
    "ci:aot": "npm run lint && npm run test && npm run build:prod:aot && npm run e2e",
    "ci:jit": "npm run lint && npm run test && npm run build:prod && npm run e2e",
    "ci:all": "npm run lint && npm run test && npm run build:prod && npm run e2e && npm run build:prod:aot && npm run e2e",
    "ci": "npm run ci:all",
    "e2e": "npm-run-all -p -r server:prod protractor",
    "lint": "tslint \"src/**/*.ts\"",
    "postinstall": "npm run webdriver:update",
    "protractor": "protractor config/protractor.conf.js",
    "server:api": "node e2e/server",
    "server:dev": "webpack-dev-server --config config/webpack.dev.js --open --progress --profile --watch --content-base src/",
    "server:prod": "PORT=3000 node e2e/server",
    "server": "npm run server:dev",
    "start": "npm-run-all --parallel server:api server:dev",
    "test": "npm run lint && npm run clean:coverage && karma start config/karma.conf.js",
    "watch:dev": "npm run build:dev -- --watch",
    "watch:prod": "npm run build:prod -- --watch",
    "watch:test": "npm run test -- --auto-watch --no-single-run",
    "watch": "npm run watch:dev",
    "webdriver:start": "webdriver-manager start",
    "webdriver:update": "webdriver-manager update"
  },
  "dependencies": {
    "@angular/common": "~2.4.7",
    "@angular/compiler": "~2.4.7",
    "@angular/core": "~2.4.7",
    "@angular/forms": "~2.4.7",
    "@angular/http": "~2.4.7",
    "@angular/platform-browser": "~2.4.7",
    "@angular/platform-browser-dynamic": "~2.4.7",
    "@angular/router": "~3.4.7",

    "core-js": "^2.4.1",
    "rxjs": "^5.1.1",
    "zone.js": "^0.7.7"
  },
  "devDependencies": {
    "@angular/compiler-cli": "^2.4.8",
    "@types/chai": "^3.4.35",
    "@types/chai-as-promised": "^0.0.29",
    "@types/mocha": "^2.2.39",
    "@types/node": "^7.0.5",
    "@types/sinon": "^1.16.35",
    "angular2-template-loader": "^0.6.2",
    "awesome-typescript-loader": "^3.0.4",
    "chai": "^3.5.0",
    "chai-as-promised": "^6.0.0",
    "codelyzer": "^2.0.0",
    "concurrently": "^3.3.0",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.26.1",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "~2.0.0-rc.3",
    "file-loader": "^0.10.0",
    "html-webpack-plugin": "^2.28.0",
    "istanbul-instrumenter-loader": "^2.0.0",
    "json-loader": "^0.5.4",
    "karma": "^1.4.1",
    "karma-coverage": "^1.1.1",
    "karma-mocha": "^1.3.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha-reporter": "^2.2.2",
    "karma-remap-coverage": "^0.1.4",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.2.0",
    "ngc-webpack": "^1.2.0",
    "ng-router-loader": "^2.1.0",
    "node-sass": "^4.5.0",
    "npm-run-all": "^4.0.1",
    "optimize-js-plugin": "^0.0.4",
    "protractor": "^5.1.1",
    "raw-loader": "^0.5.1",
    "rimraf": "^2.5.4",
    "sass-loader": "^6.0.1",
    "sinon": "~2.0.0-pre.5",
    "source-map-loader": "^0.1.6",
    "style-loader": "^0.13.1",
    "to-string-loader": "^1.1.5",
    "tslint": "^4.4.2",
    "tslint-loader": "^3.4.2",
    "ts-node": "^2.1.0",
    "typescript": "^2.1.6",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.1",
    "webpack-dev-server": "^2.3.0",
    "webpack-hot-middleware": "^2.17.0",
    "webpack-merge": "^2.6.1"
  }
}
