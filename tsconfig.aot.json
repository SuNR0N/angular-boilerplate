{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
        "es2015",
        "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "chai",
      "chai-as-promised",
      "mocha",
      "sinon",
      "node"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5",
    "outDir": "aot"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.spec.ts",
    "e2e/**/*.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit": true
  }
}