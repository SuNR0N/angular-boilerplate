{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ 
        "es2015", 
        "dom" 
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "chai",
      "chai-as-promised",
      "mocha",
      "sinon",
      "node"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "es5"
  },
  "exclude": [
    "node_modules",
    "dist",
    "src/*-aot.ts"
  ]
}